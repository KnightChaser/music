{# src/_includes/results-table.njk #}
<div class="px-4 sm:px-6 lg:px-8">
  <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table
      id="resultsTable"
      class="w-full text-lg text-black bg-white">
      <thead class="text-lg text-black uppercase bg-gray-50">
        <tr>
          <th scope="col" data-key="artist" class="sortable px-6 py-3 text-center">
            <div class="flex items-center justify-center">
              Artist
              <span class="sort-indicator ml-1">⇅</span>
            </div>
          </th>
          <th scope="col" data-key="title" class="sortable px-6 py-3 text-center">
            <div class="flex items-center justify-center">
              Title
              <span class="sort-indicator ml-1">⇅</span>
            </div>
          </th>
          <th scope="col" data-key="release" class="sortable px-6 py-3 text-center">
            <div class="flex items-center justify-center">
              Release
              <span class="sort-indicator ml-1">⇅</span>
            </div>
          </th>
          <th scope="col" class="px-6 py-3 text-center">
            Tags
          </th>
          <th scope="col" class="px-6 py-3 text-center">
            Note
          </th>
          <th scope="col" class="px-6 py-3 text-center">
            Listen
          </th>
          <th scope="col" data-key="language" class="sortable px-6 py-3 text-center">
            <div class="flex items-center justify-center">
              Language
              <span class="sort-indicator ml-1">⇅</span>
            </div>
          </th>
        </tr>
      </thead>
      <tbody class="divide-y">
        <tr>
          <td colspan="7" class="px-6 py-4 text-center text-black/50">
            Loading…
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
